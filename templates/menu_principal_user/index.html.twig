		<div class="row ">
			<div class="col-xl-12  UserUtilities2">
				<div class="row">
					<div class="col-xl-6 ">
                    {% if user.photoUser is defined%}
								<img src="{{ asset('uploads/photos/' ~ user.photoUser)}}" alt="photoUser">
						{% else %}
						<i class="far fa-grin m-4"></i>
					{% endif %}
			
						<h5 class="align-baseline">Bonjour {{app.user.pseudoUser}}</h5>
						<p>vous pouvez modifier votre compte ici , faites en bon usage</p>
						<blockquote>l'équipe du Pticoin</blockquote>
					</div>
					<div class="col-xl-6 ">
						<a href=" {{path('user_index')}} "><button class=" float-right btn btn-primary btn-lg  " type="submit">
						Voir mon profil public </button></a>
					</div>
				</div>
			</div>
		</div>
		<div class="row justify-content-between ">
			<a class="col-xl-4   UserUtilities" href="{{ path('notice_user_edit') }}">
				<div>
					<i class="far fa-file-alt m-4"></i>
