{% extends 'base.html.twig' %}

{% block title %}Faq{% endblock %}

{% block body %}
    <h1>F.A.Q.</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ faq.id }}</td>
            </tr>
            <tr>
                <th>Question</th>
                <td>{{ faq.question }}</td>
            </tr>
            <tr>
                <th>Réponse</th>
                <td>{{ faq.answer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('faq_index') }}">Retourner à la liste</a>

    <a href="{{ path('faq_edit', {'id': faq.id}) }}">Editer</a>

    {{ include('faq/_delete_form.html.twig') }}
{% endblock %}
