{% extends 'base.html.twig' %}

{% block title %}Index des utilisateurs{% endblock %}

{% block body %}
    <h1>Index des utilisateurs</h1>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rôle</th>
                <th>Mot de passe</th>
                <th>Vérifié</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Photo de profil</th>
                <th>Date d'anniversaire</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Civilité</th>
                <th>Date d'enregistrement</th>
                <th>Pseudo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                <td>{{ user.firstNameUser }}</td>
                <td>{{ user.lastNameUser }}</td>
                <td><img src="{{ asset('uploads/photos/' ~ user.photoUser)}}" alt="photoUser"></td>
                <td>{{ user.birthdayDateUser ? user.birthdayDateUser|date('Y-m-d') : '' }}</td>
                <td>{{ user.phoneUser }}</td>
                <td>{{ user.adressUser }}</td>
                <td>{{ user.cityUser }}</td>
                <td>{{ user.postalCodeUser }}</td>
                <td>{{ user.civilityUser ? 'Yes' : 'No' }}</td>
                <td>{{ user.registrationDateUser ? user.registrationDateUser|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.pseudoUser }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Montrer</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">Aucune donnée trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Créer un nouvel utilisateur</a>
{% endblock %}
